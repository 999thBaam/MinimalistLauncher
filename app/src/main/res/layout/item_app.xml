<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Bottom-Heavy App Launcher - App List Item
    Rounded item with circular icon container and large text
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_item"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">

    <!-- Circular Icon Container -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_icon_circle">

        <ImageView
            android:id="@+id/appIconImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_apps_generic"
            app:tint="@color/primaryText" />
    </FrameLayout>

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:maxLines="1"
        android:textColor="@color/minimalist_text_primary"
        android:textSize="20sp"
        tools:text="Calendar" />

    <!-- Pin indicator (shown for pinned apps) -->
    <ImageView
        android:id="@+id/pinIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_pin_indicator_small"
        android:visibility="gone"
        app:tint="@color/secondaryText"
        tools:visibility="visible" />

</LinearLayout>
