<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Decay Demo onboarding slide.
    Shows the Ghosting animation demonstrating unused apps fading.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="@color/background">

    <!-- Title -->
    <TextView
        android:id="@+id/slideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay clean"
        android:textSize="28sp"
        android:letterSpacing="-0.02"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/minimalist_text_primary"
        android:layout_marginBottom="24dp"
        android:alpha="0" />

    <!-- App Decay Demo Animation -->
    <com.minimalist.launcher.ui.AppDecayDemoView
        android:id="@+id/decayDemoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Minimal tagline -->
    <TextView
        android:id="@+id/slideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Use it or lose it."
        android:textSize="16sp"
        android:textColor="@color/minimalist_text_secondary"
        android:textAlignment="center"
        android:alpha="0" />

</LinearLayout>
