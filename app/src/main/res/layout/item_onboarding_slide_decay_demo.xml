<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Decay Demo onboarding slide.
    Shows the Ghosting animation demonstrating unused apps fading.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="@color/background">

    <!-- Feature Label -->
    <TextView
        android:id="@+id/featureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEATURE"
        android:textSize="11sp"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-medium"
        android:textColor="#666666"
        android:layout_marginBottom="12dp"
        android:alpha="0" />

    <!-- Title -->
    <TextView
        android:id="@+id/slideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital decluttering"
        android:textSize="28sp"
        android:letterSpacing="-0.02"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/minimalist_text_primary"
        android:layout_marginBottom="24dp"
        android:alpha="0" />

    <!-- App Decay Demo Animation -->
    <com.minimalist.launcher.ui.AppDecayDemoView
        android:id="@+id/decayDemoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Minimal tagline -->
    <TextView
        android:id="@+id/slideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="• White means active\n• Grey means unused\n• Your screen stays calm"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/minimalist_text_secondary"
        android:textAlignment="viewStart"
        android:alpha="0" />

</LinearLayout>
